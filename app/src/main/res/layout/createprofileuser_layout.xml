<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    tools:context=".CreateUserFragment" >

    <TableRow>
		      <TextView
				   android:id="@+id/createUseruserNameLabel"
		   		   android:textStyle="bold"
				   android:background="#EEFFBB"
				   android:text="UserName:" />
				
	  <EditText
		   android:id="@+id/createUseruserNameField"

		   android:layout_span="4" />
	</TableRow>	
    <TableRow>
		      <TextView
				   android:id="@+id/createUsergenderLabel"
		   		   android:textStyle="bold"
				   android:background="#EEFFBB"
				   android:text="Gender:" />
				
	  <EditText
		   android:id="@+id/createUsergenderField"

		   android:layout_span="4" />
	</TableRow>	
    <TableRow>
		      <TextView
				   android:id="@+id/createUserheightsLabel"
		   		   android:textStyle="bold"
				   android:background="#EEFFBB"
				   android:text="Heights:" />
				
	  <EditText
		   android:id="@+id/createUserheightsField"
		android:inputType="number|numberDecimal"

		   android:layout_span="4" />
	</TableRow>	
    <TableRow>
		      <TextView
				   android:id="@+id/createUserweightsLabel"
		   		   android:textStyle="bold"
				   android:background="#EEFFBB"
				   android:text="Weights:" />
				
	  <EditText
		   android:id="@+id/createUserweightsField"
		android:inputType="number|numberDecimal"

		   android:layout_span="4" />
	</TableRow>	
    <TableRow>
		      <TextView
				   android:id="@+id/createUserageLabel"
		   		   android:textStyle="bold"
				   android:background="#EEFFBB"
				   android:text="Age:" />
				
	  <EditText
		   android:id="@+id/createUserageField"
		android:inputType="number|numberDecimal"

		   android:layout_span="4" />
	</TableRow>	
    <TableRow>
		      <TextView
				   android:id="@+id/createUseractivityLevelLabel"
		   		   android:textStyle="bold"
				   android:background="#EEFFBB"
				   android:text="ActivityLevel:" />
				
	  <EditText
		   android:id="@+id/createUseractivityLevelField"

		   android:layout_span="4" />
	</TableRow>	
    <TableRow>
				      <TextView
						   android:id="@+id/createUsertargetCaloriesLabel"
				   		   android:textStyle="bold"
						   android:background="#EEFFBB"
						   android:text="TargetCalories:" />
						
			  <TextView
				   android:id="@+id/createUsertargetCaloriesView"
				   android:textStyle="bold"
				   android:layout_span="4" />
			</TableRow>	
    <TableRow>
				      <TextView
						   android:id="@+id/createUsertotalConsumedCaloriesLabel"
				   		   android:textStyle="bold"
						   android:background="#EEFFBB"
						   android:text="TotalConsumedCalories:" />
						
			  <TextView
				   android:id="@+id/createUsertotalConsumedCaloriesView"
				   android:textStyle="bold"
				   android:layout_span="4" />
			</TableRow>	
    <TableRow>
				      <TextView
						   android:id="@+id/createUserbmrLabel"
				   		   android:textStyle="bold"
						   android:background="#EEFFBB"
						   android:text="Bmr:" />
						
			  <TextView
				   android:id="@+id/createUserbmrView"
				   android:textStyle="bold"
				   android:layout_span="4" />
			</TableRow>	
	<TableRow>
	  <Button
		   android:id="@+id/createUserOK"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:layout_column="1"
		   android:background="#AAAAFF"
		   android:text="OK"
		   android:onClick="createUserOK"/>
	  <Button
		   android:id="@+id/createUserCancel"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:layout_column="3"
		   android:background="#FFAAAA"
		   android:text="Cancel"
		   android:onClick="createUserCancel"/>
	 </TableRow>		

</TableLayout>
</ScrollView>
